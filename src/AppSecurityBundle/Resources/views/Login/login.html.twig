{% extends '::base.nosess.html.twig' %}
{% block body %}
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div >
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-4 col-xlg-3 col-md-5">
                        <div class="card">
                            <div class="card-block">
                                <center class="m-t-30"> <img src="assets/images/users/5.jpg" class="img-circle" width="150" />
                                    <h4 class="card-title m-t-10">Some cool stuff about platform</h4>
                                    <h6 class="card-subtitle">More cool stuff</h6>
                                </center>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-7 col-xlg-8 col-md-6">
                        <div class="card">
                            <div class="card-block">
                                <form class="form-horizontal form-material" method="post" action="{{path('validate_login')}}">
                                    <div class="form-group">
                                        {% if message is defined %}
                                            <div class="alert alert-danger" role="alert">{{message}}</div>
                                        {% endif %}
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-6">Nombre de usuario o correo</label>
                                        <div class="col-md-6">
                                            <input type="text" name="{{username_field}}" placeholder="Usuario" class="form-control form-control-line">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-6">Contraseña</label>
                                        <div class="col-md-6">
                                            <input type="password" name="{{pass_field}}" placeholder="******" class="form-control form-control-line">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <button class="btn btn-success">Iniciar Sessión</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}